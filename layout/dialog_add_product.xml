<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/addproduct" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="20dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edtDALName"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/vienbogoc"
        android:paddingLeft="20dp"
        android:textColor="#000000"
        android:textSize="20dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Price"
        android:textSize="20dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edtDALPrice"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/vienbogoc"
        android:inputType="number"
        android:paddingLeft="20dp"
        android:textColor="#000000"
        android:textSize="20dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Type"
        android:textSize="20dp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/spnType"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/vienbogoc"
        android:paddingLeft="20dp"
        android:textSize="20dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textSize="20dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edtDALDescription"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/vienbogoc"
        android:paddingLeft="20dp"
        android:textColor="#000000"
        android:textSize="20dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Image"
        android:textSize="20dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edtDALImage"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/vienbogoc"
        android:paddingLeft="20dp"
        android:textColor="#000000"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnDALCancel"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:backgroundTint="#F44336"
            android:text="CANCEL"
            android:textSize="20dp"
            android:textStyle="bold"
            app:cornerRadius="10dp"
            app:strokeColor="#120C0C"
            app:strokeWidth="4dp" />

        <Button
            android:id="@+id/btnDALSave"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:backgroundTint="#00A651"
            android:text="SAVE"
            android:textSize="20dp"
            android:textStyle="bold"
            app:cornerRadius="10dp"
            app:strokeColor="#120C0C"
            app:strokeWidth="4dp" />
    </LinearLayout>


</LinearLayout>

